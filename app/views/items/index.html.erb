<h1><%= "#{APP_CONFIG['rincex_project_name']} (#{APP_CONFIG['rincex_project_id']})" %></h1>

<a href="/feed-<%= Item.root.first.id %>.atom"><img src="/images/moz-feed-icon.png" alt="Atom" />Atom feed</a>

<table border="1">
<tr>
  <th>Type</th>
  <th>Name</th>
  <th>Author</th>
  <th>Date</th>
</tr>
<% @items.each do |item| %>
<tr>
  <td><%= item.item_type %></td>
  <td><a href="<%= item.url %>"><%= item.name %></a></td>
  <td><%= item.author.display_name if item.author %></td>
  <td><%= item.rincex_date %></td>
</tr>
<% end %>
</table>
